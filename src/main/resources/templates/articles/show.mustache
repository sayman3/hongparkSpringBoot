{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<a href = "/articles/{{article.id}}/edit" class="btn-primary btn">Edit</a>
<!-- GET, a 태그 즉 링크를 사용 -->
<a href = "/articles/{{article.id}}/delete" class="btn-danger btn">Delete</a>
<a href = "/articles">Go to Article List</a>
{{>layouts/footer}}